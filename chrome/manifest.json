{
    "name": "Auto Theater Mode",
    "description": "Extension to automatically open youtube videos in theater Mode",
    "version": "0.0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "hello.html"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "http://*/",
        "https://*/",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "include_globs": [
                "*/watch?v=*"
            ]
        }
    ]
}