{
    "name": "Auto Theater Mode",
    "description": "Extension to automatically open youtube videos in theater Mode",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "https://*.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "include_globs": [
                "*/watch?v=*"
            ]
        }
    ]
}